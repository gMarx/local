  function rotateBanners(elem, html) {
    var active = $(elem+" " + html + ".active");
    var next = active.next();
    if (next.length == 0) {
      next = $(elem+" " + html + ":first");
    }
    active.removeClass("active").fadeOut(0);
    if ( html == '.charity') {
      next.addClass("active").fadeIn(800).css("display","inline-block");
    } else {
      next.addClass("active").fadeIn(800);
    }
  }

  function prepareRotator(elem, html) {
    $(elem + " " + html ).fadeOut(0);
    $(elem + " " + html + ":first").fadeIn(0).addClass("active");
  }

  function startRotator(elem, html) {
    prepareRotator(elem, html);
    setInterval("rotateBanners('" + elem + "', '" + html + "')", 7500);
  }
</script>

